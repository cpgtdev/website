---
import { getCollection } from "astro:content";
import "../styles/style.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import bsi from "bootstrap-italia/dist/js/bootstrap-italia.bundle.min.js?url";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300;400;600;700&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400&display=swap'
      rel='stylesheet'
    />
    <!-- <link
      rel='stylesheet'
      href='boostrap-italia/dist/css/bootstrap-italia.min.css'
    /> -->
    <title>{Astro.props.title || "Template Museo Civico"}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
  <script src={bsi}></script>
</html>
