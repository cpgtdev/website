---
const { blocks, links } = Astro.props;
---

<div>
  <div class='border-bottom border-2 border-secondary'>
    {
      links.map((b: any) => (
        <span class='mx-2 text-secondary'>
          <a href={`#${b.link || b.title.split(" ").join("_")}`}>{b.title}</a>
        </span>
      ))
    }
  </div>
  <div>
    {
      blocks.map((b: any) => {
        switch (b.type) {
          case "section":
            return (
              <div class='paragraph my-4'>
                {b.linked && (
                  <a id={`${b.link || b.title.split(" ").join("_")}`} />
                )}
                {b.title && <h3>{b.title}</h3>}
                <div set:text={b.body} />
              </div>
            );
          default:
            break;
        }
        return <div>{b.type}</div>;
      })
    }
  </div>
</div>
