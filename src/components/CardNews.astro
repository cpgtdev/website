---
const props = Astro.props;
// console.log("card img", props);
const { image, title, link, alt, description, pubDate } = props;
const date = new Date(pubDate);
---

<div class='card-wrapper shadow rounded overflow-hidden h-100'>
  <div class='card card-img no-after'>
    {
      image && (
        <div class='img-responsive-wrapper ratio ratio-21x9'>
          <figure>
            <img src={image.url} alt={alt} class="w-100 h-100 object-fit-cover" />
          </figure>
        </div>
      )
    }
    <div class='card-body d-flex flex-column justify-content-between'>
      <div>
        <h4 class='card-title h4 multiline-ellipsis'>{title}</h4>
        <p class='card-description font-serif multiline-ellipsis'>
          {description}
        </p>
      </div>
      <span class='font-monospace small fw-normal text-muted mt-4 text-end'>
        {date.toLocaleDateString('it-IT', { day: 'numeric', month: 'long', year: 'numeric' })}
      </span>
    </div>
  </div>
</div>
