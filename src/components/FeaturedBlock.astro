---
const { title, text, link, inverted, image } = Astro.props;
---

<style lang='scss'>
  @import "../styles/variables";

  .featured-wrapper {
    background-color: $hero-bg-color;
    position: relative;
  }

  .featured-overlay {
    bottom: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    padding: 5px;
    position: absolute;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    color: white;
    padding: 2px 10px;
  }

  .featured-link {
    text-decoration: none;
    color: white;
    fill: white;
    display: block;
  }
</style>
<div class='featured-wrapper'>
  <div class='container'>
    <div class='row'>
      <div class='img-responsive-wrapper ratio ratio-16x9 h-100'>
        <img src={image} alt='' class='w-100 h-100 object-fit-cover' />
      </div>
      <div class='featured-overlay'>
        <a href={link || "#"} class='featured-link'>
          <h5>{title}</h5>
          <p>{text}</p>
        </a>
        <div>
          <a href={link || "#"} class='featured-link'>
            <svg class='icon'>
              <use href='/icons/sprites.svg#it-arrow-right-triangle'></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
