console.log("item", item);
---

<style lang="scss">
  @import "../styles/variables";

  .hero-detail {
    background-color: $hero-bg-color;
  }

  .hero-detail-description {
    font-size: 1.2rem;
    line-height: 1.5;
    color: $color-text-secondary;
  }

  .content {
    font-size: 1.2rem;
    line-height: 1.5;
  }
  .content img {
    max-width: 100%;
    height: auto;
  }
  .content h1,
  .content h2,
  .content h3,
  .content h4,
  .content h5,
  .content h6 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }
  .content p {
    margin-bottom: 1rem;
  }
  .image-hero {
    margin-bottom: 2rem;
    position: relative;
    width: 100%;
    height: 40vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    margin-right: 8px;
    border-radius: 4px;
    background-color: $tag-bg-color;
    color: $color-text-secondary;
    font-weight: 600;
  }

  .share {
    color: $color-text-secondary;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;

    .icon {
      width: 24px;
      height: 24px;
      cursor: pointer;
    }
  }
</style>
<div class="row gx-0 hero-detail">
  <div class="order-2 order-md-1 col-12 col-md-6 p-4 p-md-5 d-flex justify-content-center align-items-center">
    <div class="">
      <h1>{item.data.title}</h1>
      <div class="my-4">
        {item.data.tags?.map((tag: string) => <span class="tag">{tag}</span>)}
      </div>
      <p class="hero-detail-description">{item.data.description}</p>
      <span class="share my-5">
        <svg class="icon"><use href="/icons/sprites.svg#it-share"></use></svg>
        Condividi
      </span>
    </div>
    <!-- <pre>{JSON.stringify(item,null,2)}</pre> -->
  </div>
  <div class="order-1 order-md-2 col-12 col-md-6 p-0">
    <div class="img-responsive-wrapper ratio ratio-4x3 h-100">
      <img
        src={item.data.image.url}
        alt={item.data.image.alt}
        class="w-100 h-100 object-fit-cover"
      />
    </div>
  </div>
</div>
